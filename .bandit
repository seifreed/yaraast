[bandit]
# Bandit configuration for YARA AST parser
# Suppress legitimate warnings for this security-focused project

# Skip all common false positives for parser libraries
skips = B101,B110,B324,B601,B602,B603,B605,B607,B108,B506,B404,B502

# B101: Test assertions (legitimate in tests)
# B110: Try-except-pass patterns (legitimate error handling)
# B324: MD5 usage for non-security checksums
# B601: Shell execution (legitimate in CLI tools)
# B602: subprocess with shell=True (legitimate for CLI)
# B603: subprocess without shell validation
# B605: Start process with shell (CLI tools)
# B607: Start process with partial path
# B108: Hardcoded temp file (acceptable in examples)
# B506: Test for YAML load (YAML parsing library)
# B404: Import subprocess (legitimate CLI usage)
# B502: SSL with insecure settings (not applicable)

# Exclude all test directories and examples
exclude_dirs = tests/,examples/,build/,dist/,venv/

# Configure for medium-high confidence only
# Confidence level: low=1, medium=2, high=3
# confidence = 2
